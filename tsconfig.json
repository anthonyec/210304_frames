{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": false
  },
  "include": ["src/**/*"]
}
